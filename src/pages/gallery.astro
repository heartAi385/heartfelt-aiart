---
import Layout from '../layouts/Layout.astro';
// ギャラリーページ
---

<Layout title="ギャラリー | HeartfeltAiart">
  <style>
    /* Tailwind クラスのインラインスタイル */
    body {
      font-family: 'Montserrat', 'Noto Sans JP', sans-serif;
      background-color: #000;
      color: #fff;
      margin: 0;
      padding: 0;
    }
    header {
      position: fixed;
      width: 100%;
      top: 0;
      z-index: 50;
      background-color: rgba(0, 0, 0, 0.8);
      backdrop-filter: blur(10px);
    }
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 1rem;
    }
    .header-content {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 0;
    }
    .logo {
      font-family: 'Playfair Display', serif;
      font-size: 1.5rem;
      font-weight: bold;
      color: #fff;
      text-decoration: none;
      transition: color 0.3s;
      letter-spacing: 0.05em;
    }
    .logo:hover {
      color: #ff4081;
    }
    nav ul {
      display: flex;
      list-style: none;
      gap: 1.5rem;
      margin: 0;
      padding: 0;
    }
    nav a {
      color: #fff;
      text-decoration: none;
      transition: color 0.3s;
    }
    nav a:hover {
      color: #ff4081;
    }
    main {
      padding-top: 5rem;
    }
    .section {
      padding: 4rem 0;
    }
    .section-title {
      font-family: 'Playfair Display', serif;
      font-size: 2.5rem;
      font-weight: bold;
      margin-bottom: 2rem;
      text-align: center;
      letter-spacing: 0.05em;
    }
    .gallery {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 1.5rem;
      padding: 0.5rem;
    }
    .gallery-item {
      position: relative;
      overflow: hidden;
      border-radius: 0.5rem;
      aspect-ratio: 9/16;
      cursor: pointer;
      transition: transform 0.3s;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    }
    .gallery-item:hover {
      transform: translateY(-5px);
    }
    .gallery-item img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.5s;
      image-rendering: -webkit-optimize-contrast;
      image-rendering: crisp-edges;
      backface-visibility: hidden;
      transform: translateZ(0);
      -webkit-font-smoothing: subpixel-antialiased;
    }
    .gallery-item:hover img {
      transform: scale(1.05);
    }
    .modal {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.9);
      z-index: 100;
      overflow: auto;
      justify-content: center;
      align-items: center;
    }
    .modal-content {
      position: relative;
      max-width: 80%;
      max-height: 90vh;
    }
    .modal-image {
      max-height: 90vh;
      max-width: 100%;
      object-fit: contain;
      image-rendering: -webkit-optimize-contrast;
      image-rendering: crisp-edges;
      backface-visibility: hidden;
      transform: translateZ(0);
      -webkit-font-smoothing: subpixel-antialiased;
    }
    .close {
      position: absolute;
      top: -40px;
      right: 0;
      color: #fff;
      font-size: 30px;
      font-weight: bold;
      cursor: pointer;
    }
    .social-links {
      display: flex;
      justify-content: center;
      gap: 1.5rem;
      margin-top: 3rem;
    }
    .social-icon {
      color: #fff;
      transition: color 0.3s;
    }
    .social-icon:hover {
      color: #ff4081;
    }
    footer {
      background-color: rgba(0, 0, 0, 0.9);
      padding: 2.5rem 0;
      margin-top: 5rem;
    }
    .footer-content {
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .footer-logo {
      font-size: 1.25rem;
      font-weight: bold;
      margin-bottom: 0.5rem;
    }
    .footer-tagline {
      color: #9ca3af;
      margin-bottom: 1.5rem;
    }
    .footer-social {
      display: flex;
      gap: 1rem;
      margin-bottom: 2rem;
    }
    .copyright {
      color: #6b7280;
      text-align: center;
    }
  </style>

  <header>
    <div class="container">
      <div class="header-content">
        <a href="/" class="logo">HeartfeltAiart</a>
        <nav>
          <ul>
            <li><a href="/">ホーム</a></li>
            <li><a href="/gallery">ギャラリー</a></li>
            <li><a href="/contact">お問い合わせ</a></li>
          </ul>
        </nav>
      </div>
    </div>
  </header>

  <main>
    <section class="section container">
      <h1 class="section-title">ギャラリー</h1>
      
      <div class="gallery">
        {Array.from({ length: 16 }).map((_, i) => (
          <div class="gallery-item" onclick={`openModal('/images/homepage${i + 1}.png')`}>
            <img src={`/images/homepage${i + 1}.png`} alt={`作品 ${i + 1}`} loading="lazy" />
          </div>
        ))}
      </div>
      
      <div class="social-links">
        <a href="https://www.instagram.com/aiart_heartfelt?igsh=bHl3enNhdGc1d3Vo" target="_blank" rel="noopener noreferrer" class="social-icon">
          <img src="/images/instaicon.png" alt="Instagram" width="32" height="32" />
        </a>
        <a href="https://www.threads.net/@aiart_heartfelt" target="_blank" rel="noopener noreferrer" class="social-icon">
          <img src="/images/threadsicon.png" alt="Threads" width="32" height="32" />
        </a>
      </div>
    </section>
  </main>

  <!-- モーダル -->
  <div id="imageModal" class="modal">
    <div class="modal-content">
      <span class="close" onclick="closeModal()">&times;</span>
      <img id="modalImage" class="modal-image" src="" alt="拡大画像">
    </div>
  </div>

  <footer>
    <div class="container footer-content">
      <div class="footer-logo">HeartfeltAiart</div>
      <p class="footer-tagline">AIで創るアート、心を込めて</p>
      <div class="footer-social">
        <a href="https://www.instagram.com/aiart_heartfelt?igsh=bHl3enNhdGc1d3Vo" target="_blank" rel="noopener noreferrer" class="social-icon">
          <img src="/images/instaicon.png" alt="Instagram" width="24" height="24" />
        </a>
        <a href="https://www.threads.net/@aiart_heartfelt" target="_blank" rel="noopener noreferrer" class="social-icon">
          <img src="/images/threadsicon.png" alt="Threads" width="24" height="24" />
        </a>
      </div>
      <p class="copyright">&copy; {new Date().getFullYear()} HeartfeltAiart. All rights reserved.</p>
    </div>
  </footer>

  <script>
    // モーダル機能
    function openModal(imageSrc) {
      const modal = document.getElementById('imageModal');
      const modalImg = document.getElementById('modalImage');
      modal.style.display = 'flex';
      modalImg.src = imageSrc;
    }

    function closeModal() {
      document.getElementById('imageModal').style.display = 'none';
    }

    // モーダル外クリックで閉じる
    window.onclick = function(event) {
      const modal = document.getElementById('imageModal');
      if (event.target == modal) {
        modal.style.display = 'none';
      }
    }
  </script>
</Layout>
